{
    "name": "XAgent Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11",
    "runArgs": [
        "--init",
        "--name",
        "xagent-dev-container"
    ],
    "workspaceFolder": "/workspaces/xagent",
    "forwardPorts": [
        8001
    ],
    "postCreateCommand": "pip install --no-cache-dir -r backend/requirements.txt",
    "settings": {
        "python.formatting.provider": "black",
        "python.languageServer": "Pylance"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
    ],
    "remoteUser": "vscode"
}